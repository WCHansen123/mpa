{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('productShowcase') }}
{% endblock %}


{% block body %}

    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img src="http://placehold.it/650x450&text=Placeholder"" /></div>
                        <div class="tab-pane" id="pic-2"><img src="http://placehold.it/650x450&text=Placeholder" /></div>
                        <div class="tab-pane" id="pic-3"><img src="http://placehold.it/650x450&text=Placeholder" /></div>
                        <div class="tab-pane" id="pic-4"><img src="http://placehold.it/650x450&text=Placeholder" /></div>
                        <div class="tab-pane" id="pic-5"><img src="http://placehold.it/650x450&text=Placeholder" /></div>
                        <div class="tab-pane" id="pic-6"><img src="http://placehold.it/650x450&text=Placeholder" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="http://placehold.it/650x450&text=Placeholder" /></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img src="http://placehold.it/650x450&text=Placeholder" /></a></li>
                        <li><a data-target="#pic-3" data-toggle="tab"><img src="http://placehold.it/650x450&text=Placeholder" /></a></li>
                        <li><a data-target="#pic-4" data-toggle="tab"><img src="http://placehold.it/650x450&text=Placeholder" /></a></li>
                        <li><a data-target="#pic-5" data-toggle="tab"><img src="http://placehold.it/650x450&text=Placeholder" /></a></li>
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">{{ product.name }}</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                    </div>
                    <h3>Product description:</h3>
                    <p class="product-description">{{ product.description }}</p>
                    <h4 class="price">current price: <span>$ {{ product.price }}</span></h4>
                    <div class="action">
                        <form method="POST" action="{{ path('productToCart') }}">
                            <div class="col-md-6">
                                <input type="text" class="hide" value="{{ product.id }}" name="product_id" id="product">
                                <input class="hide" type="text" value="{{ app.request.attributes.get('_route') }}" name="path" id="path">
                                <button class="add-to-cart btn btn-default" type="submit"><span class="glyphicon glyphicon-shopping-cart"></span> add to cart</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
